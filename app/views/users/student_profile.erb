<% provide(:register, 'Register') %>
<h6>Register student</h6>

<%= form_for [@program, @user], html: {class: ''} do |f| %>

    <div class="form-row">
      <%= f.hidden_field :profile, value: @profile, class: '' %>
    </div>

    <div class="form-row">
      <%= f.text_field :email, class: '' %>
    </div>

    <div class="form-row">
      <%= f.submit(yield(:register)) %>
    </div>

<% end %>